@model my.Models.EmployeeModel

@{
    ViewBag.Title = "AddDetails";
}

<style>
    .clr{
        color: red;
    }
</style>


<div id="page-wrapper">
    <br />
    <h2>Add Details</h2>
    @using (Html.BeginForm("AddDetails", "Home", FormMethod.Post))
    {
        @Html.HiddenFor(m => m.Id);
        <div class="form-group">
            <label>Your Name</label>
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Name,"", new { @class = "clr" })
        </div>
        <div class="form-group">
            <label>Your Email</label>
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Email,"", new { @class = "clr" })
        </div>

        <button type="submit" class="btn btn-success">Submit</button>

    }

</div>


@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryval")













